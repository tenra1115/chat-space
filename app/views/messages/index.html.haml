.wrapper
  .left-content
    .top-content
      %p.user-name 
        = link_to current_user.name
      %ul.user-menu
        %li.edit-user
          = link_to "" do
            = fa_icon "edit" 
        %li.new-group
          = link_to "/users/:id/edit" do
            =fa_icon "cog" 
    .middle-content
      = link_to "#" do
        .group
          %p.group-name ski
          %p.latest-message yo
  .right-content
    .top-content
      .current-group
        %h2.group-name ski
        %ul.member-list 
          %li.member-list-name tenra
      = link_to "#" do
        .edit-btn Edit
    .middle-content
      #message_id.message
        .upper-info
          %p.upper-info__user 
            = link_to current_user.name 
          %p.upper-info__date 2000/11/15  
        %p.message_text p
    .bottom-content
      .message-box 
        .message-box__left
          %p.message-text__make  こんにちわ 
          %span= fa_icon "image"
        .message-box__right
          .message-button__submit
            %p.submit Send

